<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="480.0" minWidth="640.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="br.ufc.trabalhofinalpds.aplicacao.BancoImobiliarioControlador">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Banco Imobilariado">
        <font>
            <Font name="Yu Gothic Regular" size="34.0" />
        </font>
    </Label>
    <Label text="Bem-Vindo" />
    <Label prefWidth="170.0" text="Escolha o número de jogadores:" />
    <TextField fx:id="quant" maxWidth="35.0" promptText="2-6" />
    <Label fx:id="erroquant" text="Insira um número entre 2 e 6!" textFill="RED" visible="false" />
    <Button onAction="#onIniciar" text="Iniciar" visible="false" />
</VBox>
